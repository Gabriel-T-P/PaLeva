<div class="container mt-5">
  <div class="card shadow-lg p-4">
    <h2 class="text-center mb-4">Cadastro do Pedido</h2>

    <div class="mb-4">
      <h4>Itens do seu pedido</h4>
      <ul class="list-group">
        <% @order.portion_orders.each do |portion_order| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong><%= portion_order.portion.item.name %></strong>
              <small class="d-block text-muted"><%= portion_order.portion.name %></small>
            </div>
            <div>
              <span><%= number_to_currency(portion_order.portion.price) %></span>
              <small class="text-muted"> x <%= portion_order.quantity %></small>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <%= form_with model: @order do |f| %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :cpf, class: "form-label" %>
          <%= f.text_field :cpf, class: "form-control", placeholder: "000.000.000-00" %>
        </div>
        <div class="col-md-6">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :phone_number, class: "form-label" %>
          <%= f.telephone_field :phone_number, class: "form-control" %>
        </div>
      </div>

      <div class="d-flex mt-4">
        <%= f.submit "Salvar Pedido", class: "btn btn-dark ms-3" %>
        <%= link_to t('.cancel'), root_path, class: 'btn btn-danger ms-3' %>
      </div>
      
    <% end %>
  </div>
</div>
