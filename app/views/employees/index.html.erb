<div class="container w-50 mt-5" id="EmployeeList">
  <h1 class="display-4 text-center my-4"><%=t'.title'%></h1>
  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th><%=User.human_attribute_name :first_name%></th>
        <th><%=User.human_attribute_name :last_name%></th>
        <th><%=User.human_attribute_name :cpf%></th>
        <th><%=User.human_attribute_name :email%></th>
        <th><%=User.human_attribute_name :status%></th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.first_name %></td>
          <td><%=employee.last_name%></td>
          <td><%=employee.cpf%></td>
          <td><%=employee.email%></td>
          <td><%=t".status.#{employee.status}"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
