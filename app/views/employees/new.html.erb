<h1 class="display-4 text-center my-4"> <%= t '.title' %> </h1>

<%= render 'shared/errors_form', variable: @employee%>

<%= form_with model: @employee do |f| %>

  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :cpf, class: "form-label" %>
      <%= f.text_field :cpf, class: "form-control" %>
    </div>
  </div>

  <div class="d-flex mt-4">
    <%= f.submit t('.save'), class: "btn btn-dark ms-3" %>
    <%= link_to t('.cancel'), root_path, class: 'btn btn-danger ms-3' %>
  </div>
  
<% end %>
