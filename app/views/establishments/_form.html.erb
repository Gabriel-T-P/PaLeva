<%= render 'shared/errors_form', variable: @establishment%>

<div class="d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with model: establishment, class: 'border p-4 shadow-sm' do |f| %>

      <div>
        <%= f.label :corporate_name, class: 'form-label' %>
        <%= f.text_field :corporate_name, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :trade_name, class: 'form-label' %>
        <%= f.text_field :trade_name, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :cnpj, class: 'form-label' %>
        <%= f.text_field :cnpj, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :full_address, class: 'form-label' %>
        <%= f.text_field :full_address, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :phone_number, class: 'form-label' %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <br>
      <div class="d-flex">
        <%= f.submit t('.save'), class: 'btn btn-dark' %>
      </div>

    <% end %>    
  </div>
</div>
