<% if @establishment.errors.any? %>
  <div class="alert alert-danger">
    <h4 class="alert-heading"> <%=t '.errors_message'%>:</h4>
    <ul class="mb-0">
      <% @establishment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with model: establishment, class: 'border p-4 shadow-sm' do |f| %>

      <div>
        <%= f.label :corporate_name, class: 'form-label' %>
        <%= f.text_field :corporate_name, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :trade_name, class: 'form-label' %>
        <%= f.text_field :trade_name, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :cnpj, class: 'form-label' %>
        <%= f.text_field :cnpj, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :full_address, class: 'form-label' %>
        <%= f.text_field :full_address, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :phone_number, class: 'form-label' %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <br>
      <div class="d-flex">
        <%= f.submit t('.save'), class: 'btn btn-dark' %>
      </div>

    <% end %>    
  </div>
</div>
